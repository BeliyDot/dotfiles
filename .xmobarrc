Config { overrideRedirect = False
       , font = "Courier Prime Bold 11"
       , bgColor  = "#000000"
       , fgColor  = "#f8f8f2"
       , commands = [ Run Weather "UKLN"
                        [ "--template", "<weather> <tempC>Â°C"
                        ] 36000
                    , Run Cpu [] 10
                    , Run Memory ["--template", "Mem: <usedratio>%"] 10
                    , Run Date "%a %Y-%m-%d | %H:%M" "date" 10
                    , Run XMonadLog
		    , Run BatteryP ["BAT0"] [
			"-t", "<acstatus>: <left>%",
			"--", "-O", "AC", "-i", "", "-o", "Batt"
] 600
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%XMonadLog% } %date% { %UKLN% | %cpu% | %memory% | %battery% "
       }

